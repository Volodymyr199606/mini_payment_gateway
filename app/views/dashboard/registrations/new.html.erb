<div class="sign-in-container">
  <div class="sign-in-card">
    <h1 class="sign-in-title">Sign Up</h1>
    <p class="sign-in-subtitle">Create a merchant account to use the dashboard</p>

    <% if @merchant&.errors&.any? %>
      <div class="alert alert-error">
        <%= @merchant.errors.full_messages.to_sentence %>
      </div>
    <% end %>

    <%= form_with url: dashboard_sign_up_path, scope: :registration, method: :post, local: true, class: "sign-in-form" do |f| %>
      <div class="form-group">
        <%= f.label :name, "Business name", class: "form-label" %>
        <%= f.text_field :name, class: "form-input", placeholder: "Acme Corp", value: @merchant&.name, required: true, autocomplete: "organization" %>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-input", placeholder: "you@example.com", value: @merchant&.email, required: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password", class: "form-label" %>
        <%= f.password_field :password, class: "form-input", placeholder: "At least 6 characters", required: true, autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm password", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-input", placeholder: "Same as above", required: true, autocomplete: "new-password" %>
      </div>
      <%= f.submit "Create account", class: "btn btn-primary" %>
    <% end %>

    <p class="sign-in-help">
      Already have an account? <%= link_to "Sign in", dashboard_sign_in_path, class: "sign-in-link" %>
    </p>
  </div>
</div>
