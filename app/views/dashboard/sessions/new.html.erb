<div class="sign-in-container">
  <div class="sign-in-card">
    <h1 class="sign-in-title">Sign In</h1>
    <p class="sign-in-subtitle">Enter your API key to access the dashboard</p>

    <%= form_with url: dashboard_sign_in_path, method: :post, local: true, class: "sign-in-form" do |f| %>
      <div class="form-group">
        <%= f.label :api_key, "API Key", class: "form-label" %>
        <%= f.text_field :api_key, class: "form-input", placeholder: "Enter your API key", required: true %>
      </div>

      <%= f.submit "Sign In", class: "btn btn-primary" %>
    <% end %>

    <p class="sign-in-help">
      Don't have an API key? Create a merchant via the API to get one.
    </p>
  </div>
</div>
