<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard - Mini Payment Gateway</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="dashboard">
    <%= render "layouts/dashboard_header" %>
    <%= render "layouts/dashboard_nav" %>

    <main class="dashboard-main" role="main">
      <div class="dashboard-container">
        <% if notice %>
          <div class="dashboard-alert dashboard-alert-success"><%= notice %></div>
        <% end %>
        <% if alert %>
          <div class="dashboard-alert dashboard-alert-error"><%= alert %></div>
        <% end %>
        <%= yield %>
      </div>
    </main>
  </body>
</html>
